{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "noEmitOnError": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@privatevault/shared": ["../shared/src/index.ts"],
      "@privatevault/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["**/*.ts", "../shared/src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
